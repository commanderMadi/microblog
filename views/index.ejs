<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="styles/styles.css" />
        <title><%=settingsRow[0].blog_title%> | Homepage</title>
    </head>

    <body>
        <%-include('partials/navbar') %>

        <main class="wrapper">
            <% if (req.user && req.user.user_role==="Author" && authorFirstTimeLogin) {%>
            <div class="pw-change-alert bg-red-500 border-r-red-700 p-3">
                <p class="text-white">
                    First time login password is very unsecure. Proceed to
                    <a class="font-bold text-indigo-900" href="/dashboard/change-password">change your password</a>
                    immediately
                </p>
            </div>
            <%}%>
            <section class="published-articles-section">
                <% if (rows.length === 0 && req.user && req.user.user_role === "Author") { %>
                <h1 class="text-center text-red-800 text-4xl mt-10">
                    No published articles yet. Go to the <a class="text-indigo-900" href="/dashboard">dashboard</a> to create some articles.
                </h1>
                <% } else if (rows.length === 0) { %>
                <h1 class="text-center text-red-800 text-4xl mt-10">
                    No published articles yet. Wait for the authors to publish some articles.
                </h1>

                <%}else { %>
                <h1 class="mt-10 mb-5 ml-3 published-articles-title text-4xl">Published Articles</h1>

                <% } %>
                <div
                    class="mx-auto container published-articles-container content-center align-items-center grid grid-rows-1 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
                >
                    <% rows.forEach((article,i)=> { if( i === 0) {%>
                    <div class="flex flex-col justify-end m-3 article-container border shadow border-stone-400 text-center">
                        <img class="mx-auto" src="images/article_icon.png" alt="Article icon" width="200" height="200" />
                        <span class="text-emerald-700">Latest!</span>
                        <h3><%=article.title%></h3>
                        <span><%=article.publish_date%></span>
                        <form action="/article/<%=article.article_id%>">
                            <input
                                class="hover:bg-indigo-800 mt-4 p-4 shadow cursor-pointer text-white bg-red-700 w-full"
                                type="submit"
                                value="Read Article"
                            />
                        </form>
                    </div>
                    <%} else {%>
                    <div class="flex flex-col justify-end m-3 article-container border shadow border-stone-400 text-center">
                        <img class="mx-auto" src="images/article_icon.png" alt="Article icon" width="200" height="200" />
                        <h3><%=article.title%></h3>
                        <span><%=article.publish_date%></span>
                        <form action="/article/<%=article.article_id%>">
                            <input
                                class="hover:bg-indigo-800 mt-4 p-4 shadow cursor-pointer text-white bg-red-700 w-full"
                                type="submit"
                                value="Read Article"
                            />
                        </form>
                    </div>
                    <%}%> <%}) %>
                </div>
            </section>
        </main>
    </body>
</html>
