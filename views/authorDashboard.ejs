<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles/styles.css" type="text/css" />
        <title><%=settingsRow[0].blog_title%> | Author Dashboard</title>
    </head>
    <body>
        <%- include('partials/navbar') %>

        <h1 class="text-4xl my-10 w-6/12 mx-auto">Author Dashboard</h1>

        <div class="drafts-container container w-6/12 mx-auto">
            <header class="flex items-center justify-between mb-10">
                <h2 class="text-3xl ml-1 my-5">Drafts</h2>
                <a
                    class="p-3 mt-4 mx-2 border-indigo-500 cursor-pointer text-white bg-indigo-950 hover:bg-indigo-900 rounded-md self-end text-right"
                    href="/dashboard/article/create-article"
                    >Create New Draft</a
                >
            </header>
            <% if(messages.success) {%>
            <div id="draft-creation-success" class="text-indigo-800 ml-2"><%=messages.success%></div>
            <% } %> <%var draftCount = 0; rows.forEach(article => article.publish_state === "Draft" ? ++draftCount : false ); if(draftCount
            === 0) { %>
            <h2 class="text-lg text-center text-red-800 ml-1 my-5">
                No Drafts available. Click on the "Create New Draft" Button to add one.
            </h2>
            <%} %> <% rows.forEach(article => { if (article.publish_state === "Draft") { %>
            <div class="single-draft-container rounded-lg shadow mb-10 flex flex-wrap bg-slate-100 p-5 justify-end">
                <div class="w-full text-lg font-semibold mb-5"><%=article.title%></div>
                <div class="w-full text-gray-500 text-xs"><span>Date Created: </span><%=article.created_at_date%></div>
                <div class="w-full text-gray-500 text-xs"><span>Date Modified: </span><%=article.modified_at_date%></div>
                <form
                    class="p-3 mt-4 mx-2 border-indigo-500 cursor-pointer text-white bg-indigo-800 hover:bg-indigo-950 rounded-md self-end"
                    action="/dashboard/article/<%=article.article_id%>?_method=PUT"
                    method="post"
                >
                    <input type="hidden" name="_method" value="PUT" />
                    <input class="cursor-pointer" type="submit" value="Publish" />
                </form>
                <a
                    class="p-3 mt-4 mx-2 border-indigo-500 cursor-pointer text-white bg-indigo-800 hover:bg-indigo-950 rounded-md self-end text-right"
                    href="/dashboard/article/edit-article/<%=article.article_id%>"
                    >Edit</a
                >
                <form
                    class="p-3 mt-4 mx-2 border-red-500 cursor-pointer text-white bg-red-800 hover:bg-red-700 rounded-md self-end"
                    method="post"
                    action="/dashboard/article/<%=article.article_id%>?_method=DELETE"
                >
                    <input type="hidden" name="_method" value="DELETE" />
                    <input class="cursor-pointer" type="submit" value="Delete" />
                </form>
            </div>
            <%}})%>
        </div>

        <div class="drafts-container container w-6/12 mx-auto">
            <header class="flex flex-col justify-between mb-10">
                <h2 class="text-3xl ml-1 my-5">Published</h2>

                <%var publishedCount = 0; rows.forEach(article => article.publish_state === "Published" ? ++publishedCount : false );
                if(publishedCount === 0) { %>
                <h2 class="text-lg text-center text-red-800 ml-1 my-5">No Published articles available. Publish some drafts first.</h2>

                <%}%>
            </header>
            <% rows.sort((a,b) => {if (a.publish_state.length && b.publish_state.length){ return a.publish_date < b.publish_date ? 1 :
            -1}}).forEach(article => { if (article.publish_state !== "Draft") { %>
            <div class="single-draft-container rounded-lg shadow mb-10 flex flex-wrap bg-slate-100 p-5 justify-end">
                <div class="w-full text-lg font-semibold mb-5"><%=article.title%></div>
                <div class="w-full text-gray-500 text-xs"><span>Date Published: </span><%=article.publish_date%></div>
                <div class="w-full text-gray-500 text-xs"><span>Date Created: </span><%=article.created_at_date%></div>
                <div class="w-full text-gray-500 text-xs"><span>Date Modified: </span><%=article.modified_at_date%></div>

                <a
                    class="p-3 mt-4 mx-2 border-indigo-500 cursor-pointer text-white bg-indigo-800 hover:bg-indigo-950 rounded-md self-end text-right"
                    href="/dashboard/article/edit-article/<%=article.article_id%>"
                    >Edit</a
                >
                <form
                    class="p-3 mt-4 mx-2 border-red-500 cursor-pointer text-white bg-red-800 hover:bg-red-700 rounded-md self-end"
                    method="post"
                    action="/dashboard/article/<%=article.article_id%>?_method=DELETE"
                >
                    <input type="hidden" name="_method" value="DELETE" />
                    <input class="cursor-pointer" type="submit" value="Delete" />
                </form>
            </div>
            <%}})%>
        </div>
    </body>
    <script>
        const successMsgElement = document.getElementById('draft-creation-success');
        function clearMessage() {
            setTimeout(() => {
                successMsgElement.textContent = '';
            }, 3000);
        }
        if (successMsgElement && successMsgElement.textContent.length > 0) {
            clearMessage();
        }
    </script>
</html>
