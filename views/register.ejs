<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles/styles.css" type="text/css" />

        <title>Document</title>
    </head>
    <body>
        <%-include('partials/navbar') %>

        <div class="container w-4/12 mx-auto mt-10">
            <h1 class="text-4xl my-10 w-6/12">Register</h1>
            <!--Express Validator Failure Messages-->
            <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %> <%=error.msg %> <% }) %> <% } %>
            <!--Express Flash Messages-->
            <% if (messages.failure_msg) { %>
            <p class="text-red-500"><%=messages.failure_msg%></p>
            <% } %>
            <!--Express Validator Messages-->
            <% if (messages.failure_msgs) { %> <%messages.failure_msgs[0].errors.forEach(msg => {%>
            <p class="text-red-500"><%=msg.msg%></p>
            <% }) %> <% } %>

            <form class="flex flex-col" action="/register" method="post">
                <label class="block my-4" for="username">Username</label>
                <input
                    class="bg-slate-50 w-full appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-indigo-800"
                    type="text"
                    name="username"
                />

                <label class="block my-4" for="email">Email</label>
                <input
                    class="bg-slate-50 w-full appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-indigo-800"
                    type="email"
                    name="email"
                />
                <label class="block my-4" for="password">Password</label>
                <input
                    class="bg-slate-50 w-full appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-indigo-800"
                    type="password"
                    name="password"
                />
                <label class="block my-4" for="password">Confirm Password</label>
                <input
                    class="bg-slate-50 w-full appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-indigo-800"
                    type="password"
                    name="confirm_password"
                />

                <div class="action-buttons flex justify-between items-center">
                    <h3>Already have an account? <a class="text-red-700 font-bold hover:text-indigo-950" href="/login/">Log In</a>.</h3>
                    <input
                        class="p-3 mt-6 border-indigo-500 cursor-pointer text-white bg-indigo-800 hover:bg-indigo-950 rounded-md self-end"
                        type="submit"
                        value="Register"
                    />
                </div>
            </form>
        </div>
    </body>
</html>
